<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.mobimedia.locationmaptool.ui.GridviewActivity"
     >
     <RelativeLayout
         android:id="@+id/textshownontop"
         android:layout_width="fill_parent"
         android:layout_height="60dp" >
         <TextView 
             android:id="@+id/tileimageshow"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="@string/showall"
           android:layout_centerVertical="true"
           android:textSize="15sp"
           android:textStyle="bold"
         >
         </TextView>
         <TextView 
             android:id="@+id/text"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="@string/mapname"
              android:gravity="center"
              android:textSize="22sp"
              android:textStyle="bold"
            android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
             />
<ImageView
    android:id="@+id/sendmail"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:src="@drawable/mailsender" 
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    />
      </RelativeLayout>
     <TextView 
         android:id="@+id/underline"
         android:layout_width="fill_parent"
         android:layout_below="@+id/textshownontop"
         android:layout_height="0.02sp"
         android:background="#000000"
         />
    <ListView
        android:id="@+id/gridView"
        android:layout_below="@+id/underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        
       >
    </ListView>
   
   
    </RelativeLayout>
